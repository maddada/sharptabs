---
import SubredditCard from "./SubredditCard.astro";
---

<section id="download" class="relative overflow-hidden pb-20 pt-32">
    <div class="container-outer">
        <div class="mx-auto mb-12 max-w-3xl text-center">
            <h2 class="mb-4 text-3xl font-bold text-white/90 drop-shadow-[0_0_16px_rgba(78,163,255,0.25)] md:text-4xl">Get Sharp Tabs Today!</h2>
            <p class="text-xl text-gray-300">
                Transform your browsing experience with the most polished and feature-rich vertical tabs extension.
            </p>
        </div>

        <div class="row mx-auto flex flex-wrap justify-center gap-6">
            <!-- Badge template (unified) -->
            <a
                href="https://chromewebstore.google.com/detail/sharp-tabs-the-most-polis/ooagakphldicpdeamgchdkpfbehcdjjk"
                class="group relative block cursor-pointer overflow-hidden rounded-2xl border border-blue-400/20 bg-gradient-to-br from-[#0a224f]/50 to-[#06163a]/60 p-6 shadow-lg transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl"
            >
                <div
                    class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-blue-500/20 to-cyan-500/20 ring-1 ring-blue-400/20"
                >
                    <img src="chrome.svg" alt="Chrome" class="h-10 w-10" />
                </div>
            </a>

            <a
                href="https://chromewebstore.google.com/detail/sharp-tabs-the-most-polis/ooagakphldicpdeamgchdkpfbehcdjjk"
                class="group relative block cursor-pointer overflow-hidden rounded-2xl border border-blue-400/20 bg-gradient-to-br from-[#0a224f]/50 to-[#06163a]/60 p-6 shadow-lg transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl"
            >
                <div
                    class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-blue-500/20 to-cyan-500/20 ring-1 ring-blue-400/20"
                >
                    <img src="edge.svg" alt="Edge" class="h-10 w-10" />
                </div>
            </a>

            <a
                href="https://chromewebstore.google.com/detail/sharp-tabs-the-most-polis/ooagakphldicpdeamgchdkpfbehcdjjk"
                class="group relative block cursor-pointer overflow-hidden rounded-2xl border border-blue-400/20 bg-gradient-to-br from-[#0a224f]/50 to-[#06163a]/60 p-6 shadow-lg transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl"
            >
                <div
                    class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-blue-500/20 to-cyan-500/20 ring-1 ring-blue-400/20"
                >
                    <img src="vivaldi.svg" alt="Vivaldi" class="h-10 w-10" />
                </div>
            </a>

            <a
                href="https://chromewebstore.google.com/detail/sharp-tabs-the-most-polis/ooagakphldicpdeamgchdkpfbehcdjjk"
                class="group relative block cursor-pointer overflow-hidden rounded-2xl border border-blue-400/20 bg-gradient-to-br from-[#0a224f]/50 to-[#06163a]/60 p-6 shadow-lg transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl"
            >
                <div
                    class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-blue-500/20 to-cyan-500/20 ring-1 ring-blue-400/20"
                >
                    <img src="brave.svg" alt="Brave" class="h-10 w-10" />
                </div>
            </a>

            <a
                href="https://chromewebstore.google.com/detail/sharp-tabs-the-most-polis/ooagakphldicpdeamgchdkpfbehcdjjk"
                class="group relative block cursor-pointer overflow-hidden rounded-2xl border border-blue-400/20 bg-gradient-to-br from-[#0a224f]/50 to-[#06163a]/60 p-6 shadow-lg transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl"
            >
                <div
                    class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-blue-500/20 to-cyan-500/20 ring-1 ring-blue-400/20"
                >
                    <img src="opera.svg" alt="Opera" class="h-10 w-10" />
                </div>
            </a>
        </div>

        <div class="mt-16 text-center">
            <SubredditCard />
        </div>
    </div>
</section>
