                                                <text x="14" y="38" fill="#94a3b8" font-size="9" font-family="Inter, ui-sans-serif">Photos ‚Ä¢ Gradients ‚Ä¢ Patterns</text>
                                            </g>
                                        </g>

                                        <!-- theme chips -->
                                        <g transform="translate(260,196)">
                                            <rect x="0" y="0" width="540" height="64" rx="10" fill="#111827" stroke="#6b728040"/>
                                            <g transform="translate(14,14)">
                                                <rect x="0" y="0" width="120" height="36" rx="8" fill="url(#cosmic)" stroke="#a78bfa80" filter="url(#soft)"/>
                                                <circle cx="18" cy="18" r="7" fill="#ffffff30"/>
