                                                    <circle cx="8" cy="14" r="3" fill="#6ee7b7"/>
                                                    <text x="18" y="18" fill="#94a3b8" font-size="10" font-family="Inter, ui-sans-serif">YouTube ‚Äî playlist</text>
                                                </g>
                                                <g transform="translate(0,118)" opacity="0.5">
                                                    <rect x="0" y="0" width="196" height="28" rx="6" fill="#ffffff08"/>
                                                    <circle cx="8" cy="14" r="3" fill="#f9a8d4"/>
                                                    <text x="18" y="18" fill="#94a3b8" font-size="10" font-family="Inter, ui-sans-serif">Slack ‚Äî team</text>
                                                </g>
                                            </g>
                                        </g>

                                        <!-- right area: preview surface -->
                                        <g transform="translate(260,20)">
                                            <rect x="0" y="0" width="540" height="160" rx="10" fill="#0f172a" stroke="#94a3b840"/>
                                            <rect x="0" y="0" width="540" height="160" fill="url(#bgGrad)"/>
                                            <g transform="translate(20,18)">
                                                <rect x="0" y="0" width="240" height="40" rx="8" fill="#00000050" stroke="#ffffff15"/>
