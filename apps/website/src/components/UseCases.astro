                                        <span class="text-sm font-semibold text-purple-200">Demo</span>
                                        <span class="text-[11px] text-gray-400">Themes + Backgrounds</span>
                                    </div>

                                    <svg viewBox="0 0 820 280" class="h-auto w-full">
                                        <defs>
                                            <linearGradient id="g1" x1="0" x2="1" y1="0" y2="1">
                                                <stop offset="0%" stop-color="#1f1240" stop-opacity="0.6" />
                                                <stop offset="100%" stop-color="#0b1222" stop-opacity="0.6" />
                                            </linearGradient>
                                            <linearGradient id="cosmic" x1="0" x2="0" y1="0" y2="1">
                                                <stop offset="0%" stop-color="#7c3aed"/>
                                                <stop offset="100%" stop-color="#2563eb"/>
                                            </linearGradient>
                                            <linearGradient id="ocean" x1="0" x2="1" y1="0" y2="1">
                                                <stop offset="0%" stop-color="#34d399"/>
                                                <stop offset="100%" stop-color="#38bdf8"/>
                                            </linearGradient>
                                            <radialGradient id="bgGrad" cx="20%" cy="0%" r="80%">
