---
import Command from "@lucide/astro/icons/command";
import Keyboard from "@lucide/astro/icons/keyboard";
import Palette from "@lucide/astro/icons/palette";
import Power from "@lucide/astro/icons/power";
import Save from "@lucide/astro/icons/save";
import Sparkles from "@lucide/astro/icons/sparkles";
import BadgeCheck from "@lucide/astro/icons/badge-check";
import Zap from "@lucide/astro/icons/zap";
---

<section id="use-cases" class="relative overflow-hidden py-24">
    <!-- Decorative arcs unique to Use Cases -->
    <div class="pointer-events-none absolute inset-0 -z-10">
        <div class="absolute -left-20 top-10 h-48 w-[60%] rounded-full border border-blue-400/10"></div>
        <div class="absolute -left-8 top-16 h-56 w-[65%] rounded-full border border-blue-400/10"></div>
        <div class="absolute right-[-10%] top-[30%] h-80 w-[50%] rounded-full border border-cyan-400/10"></div>
    </div>
    <div class="container-outer">
        <div class="mb-16 text-center">
            <h2 class="mb-4 text-3xl font-bold text-white md:text-4xl">Use Cases</h2>
            <p class="mx-auto max-w-2xl text-xl text-gray-300">See how Sharp Tabs can revolutionize your browsing experience</p>
        </div>

        <div class="space-y-14">
            <!-- Use Case 1 -->
            <div
                class="group relative overflow-hidden rounded-2xl border border-blue-400/20 bg-gradient-to-br from-[#081737]/65 to-[#041028]/70 shadow-xl transition-transform duration-300 hover:-translate-y-1 hover:shadow-2xl"
            >
                <div
                    class="pointer-events-none absolute -inset-px rounded-2xl opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                    style="background: radial-gradient(800px 240px at 20% -10%, rgba(78,163,255,0.18), transparent);"
                >
                </div>
                <div class="relative md:flex">
                    <div
                        class="flex flex-col justify-center bg-gradient-to-br from-blue-500/10 to-cyan-500/10 p-8 backdrop-blur-sm md:w-1/3"
                    >
                        <div
                            class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-cyan-500 text-white shadow-lg"
                        >
                            <Keyboard size={32} />
                        </div>
                        <h3 class="mb-2 text-2xl font-bold text-white">
                            Instant Filtering <br />& Keyboard Navigation
                        </h3>
                    </div>
                    <div class="p-8 md:w-2/3">
                        <p class="mb-6 text-lg leading-relaxed text-gray-300">
                            Start typing to instantly filter all tabs from all windows. Hit tab to select a tab and enter to open
                            it. Many more hotkeys to come based on feedback.
                        </p>
                        <div class="relative overflow-hidden rounded-xl border border-blue-400/15 bg-[#020814]/70 p-6 shadow-inner">
                            <div class="space-y-4">
                                <div class="flex items-center justify-between rounded-lg bg-gray-800/80 p-3">
                                    <span class="text-gray-400">‚å®Ô∏è Type to filter:</span>
                                    <span class="rounded bg-blue-500/20 px-2 py-1 text-sm text-blue-300">gmail</span>
                                </div>
                                <div class="space-y-2">
                                    <div
                                        class="flex items-center space-x-3 rounded-lg border border-blue-500/30 bg-blue-500/20 p-3"
                                    >
                                        <div class="h-3 w-3 rounded-full bg-blue-500"></div>
                                        <span class="text-white">Gmail - Inbox (2 unread)</span>
                                        <span class="text-xs text-gray-400">gmail.com</span>
                                    </div>
                                    <div class="flex items-center space-x-3 rounded-lg bg-gray-800/60 p-3 opacity-40">
                                        <div class="h-3 w-3 rounded-full bg-gray-500"></div>
                                        <span class="text-gray-400">Facebook - News Feed</span>
                                        <span class="text-xs text-gray-500">facebook.com</span>
                                    </div>
                                    <div class="flex items-center space-x-3 rounded-lg bg-gray-800/60 p-3 opacity-40">
