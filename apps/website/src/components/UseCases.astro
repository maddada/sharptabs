                                            </g>
                                            <g transform="translate(152,14)">
                                                <rect x="0" y="0" width="120" height="36" rx="8" fill="#0b0f19" stroke="#374151"/>
                                                <circle cx="18" cy="18" r="7" fill="#111827"/>
                                                <text x="36" y="23" fill="#d1d5db" font-size="12" font-family="Inter, ui-sans-serif">Dark</text>
                                            </g>
                                            <g transform="translate(290,14)">
                                                <rect x="0" y="0" width="120" height="36" rx="8" fill="url(#ocean)" stroke="#10b98180"/>
                                                <circle cx="18" cy="18" r="7" fill="#ffffff30"/>
                                                <text x="36" y="23" fill="#ecfeff" font-size="12" font-family="Inter, ui-sans-serif">Ocean</text>
                                            </g>
                                            <g transform="translate(430,14)">
                                                <rect x="0" y="0" width="96" height="36" rx="8" fill="#0b1020" stroke="#334155"/>
