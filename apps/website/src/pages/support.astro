---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import FeedbackForm from "../components/react/FeedbackForm.tsx";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/icon.svg" />
        <link rel="alternate icon" type="image/png" sizes="48x48" href="/icon48.png" />
        <link rel="alternate icon" type="image/png" sizes="16x16" href="/icon16.png" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Support - Sharp Tabs</title>
        <meta name="description" content="Get support for Sharp Tabs extension. Contact us with your feedback and requests." />
    </head>
    <body class="min-h-screen overflow-x-hidden bg-black">
        <!-- Background with animated elements -->
        <div class="fixed inset-0 bg-gradient-to-br from-slate-950 via-black to-slate-900">
            <div class="absolute inset-0 bg-gradient-to-t from-blue-950/20 via-transparent to-transparent"></div>
            <!-- Animated blue orbs -->
            <div class="absolute left-1/4 top-1/4 h-64 w-64 animate-pulse rounded-full bg-blue-500/10 blur-3xl"></div>
            <div class="absolute bottom-1/3 right-1/4 h-96 w-96 animate-pulse rounded-full bg-cyan-500/5 blur-3xl delay-1000">
            </div>
            <div class="bg-blue-600/8 absolute left-1/2 top-2/3 h-48 w-48 animate-pulse rounded-full blur-2xl delay-500"></div>
        </div>

        <Navbar />

        <main class="container relative z-10 mx-auto mt-20 min-h-[900px] max-w-4xl px-4 py-16">
            <div class="text-center">
                <!-- Hero Section -->
                <div class="relative mb-16">
                    <!-- Logo with enhanced styling -->
                    <div class="group relative mx-auto mb-8 h-24 w-24">
                        <div
                            class="absolute inset-0 rounded-2xl bg-gradient-to-br from-blue-400 to-cyan-500 opacity-75 blur-xl transition-opacity duration-500 group-hover:opacity-100"
                        >
                        </div>
                        <div
                            class="relative transform rounded-2xl bg-gradient-to-br from-blue-800 to-cyan-900 p-5 shadow-2xl transition-transform duration-300 group-hover:scale-105"
                        >
                            <img src="/icon.svg" alt="Sharp Tabs" class="h-full w-full opacity-95" />
                            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white/20 to-transparent"></div>
                        </div>
                        <!-- Floating particles -->
                        <div class="absolute -right-2 -top-2 h-3 w-3 animate-bounce rounded-full bg-blue-400 delay-300"></div>
                        <div class="absolute -bottom-2 -left-2 h-2 w-2 animate-bounce rounded-full bg-cyan-400 delay-700"></div>
                    </div>

                    <h1 class="mb-6 text-5xl font-black tracking-tight md:text-6xl">
                        <span class="bg-gradient-to-r from-white via-blue-100 to-cyan-200 bg-clip-text text-transparent">
                            We're Here to Help
                        </span>
                    </h1>

                    <p class="mx-auto max-w-2xl text-xl font-light leading-relaxed text-slate-300">
                        Have feedback, questions, or need assistance? We'd love to hear from you and help make
                        <span class="font-medium text-blue-400">Sharp Tabs</span> even better.
                    </p>

                    <!-- Decorative line -->
                    <div
                        class="mx-auto mt-12 h-1 w-72 rounded-full bg-gradient-to-r from-transparent via-blue-500 to-transparent"
                    >
                    </div>
                </div>

                <!-- Main Content Card with Glass Morphism -->
                <div class="relative mb-12">
                    <!-- Card background with blur effect -->
                    <div
                        class="absolute inset-0 rounded-3xl border border-slate-700/50 bg-gradient-to-br from-slate-800/40 to-slate-900/60 backdrop-blur-xl"
                    >
                    </div>
                    <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-blue-500/5 to-cyan-500/5"></div>

                    <div class="relative p-8 md:p-12">
                        <div class="mb-10">
                            <h2 class="mb-6 text-3xl font-bold text-white">
                                Your Feedback
                                <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent"
                                    >Matters</span
                                >
                            </h2>
                            <p class="mx-auto mb-8 max-w-3xl text-lg leading-relaxed text-slate-200">
                                Every suggestion, bug report, and feature request helps us improve Sharp Tabs for our entire
                                community. Share your thoughts with us and help shape the future of tab management.
                            </p>
                        </div>

                        <!-- Contact Form -->
                        <div class="mb-12">
                            <FeedbackForm page="support" client:load />
                        </div>

                        <!-- Feature Cards with Enhanced Design -->
                        <div class="grid gap-6 md:grid-cols-3">
                            <!-- Quick Response Card -->
                            <div
                                class="group relative rounded-2xl border border-slate-700/50 bg-gradient-to-br from-slate-800/50 to-slate-900/50 p-6 backdrop-blur-sm transition-all duration-300 hover:-translate-y-1 hover:transform hover:border-green-500/30"
                            >
                                <div
                                    class="absolute inset-0 rounded-2xl bg-gradient-to-br from-green-500/5 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                                >
                                </div>

                                <div class="relative">
                                    <div
                                        class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-gradient-to-br from-green-500/20 to-emerald-500/20 transition-transform duration-300 group-hover:scale-110"
                                    >
                                        <svg class="h-7 w-7 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </div>
                                    <h3 class="mb-3 text-lg font-bold text-white">Quick Response</h3>
                                    <p class="leading-relaxed text-slate-300">We typically respond within 24 hours</p>
                                </div>
                            </div>

                            <!-- Bug Reports Card -->
                            <div
                                class="group relative rounded-2xl border border-slate-700/50 bg-gradient-to-br from-slate-800/50 to-slate-900/50 p-6 backdrop-blur-sm transition-all duration-300 hover:-translate-y-1 hover:transform hover:border-blue-500/30"
                            >
                                <div
                                    class="absolute inset-0 rounded-2xl bg-gradient-to-br from-blue-500/5 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                                >
                                </div>

                                <div class="relative">
                                    <div
                                        class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-gradient-to-br from-blue-500/20 to-cyan-500/20 transition-transform duration-300 group-hover:scale-110"
                                    >
                                        <svg class="h-7 w-7 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                        </svg>
                                    </div>
                                    <h3 class="mb-3 text-lg font-bold text-white">Bug Reports</h3>
                                    <p class="leading-relaxed text-slate-300">Help us squash bugs and improve stability</p>
                                </div>
                            </div>

                            <!-- Feature Ideas Card -->
                            <div
                                class="group relative rounded-2xl border border-slate-700/50 bg-gradient-to-br from-slate-800/50 to-slate-900/50 p-6 backdrop-blur-sm transition-all duration-300 hover:-translate-y-1 hover:transform hover:border-purple-500/30"
                            >
                                <div
                                    class="absolute inset-0 rounded-2xl bg-gradient-to-br from-purple-500/5 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                                >
                                </div>

                                <div class="relative">
                                    <div
                                        class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-xl bg-gradient-to-br from-purple-500/20 to-pink-500/20 transition-transform duration-300 group-hover:scale-110"
                                    >
                                        <svg
                                            class="h-7 w-7 text-purple-400"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                                            ></path>
                                        </svg>
                                    </div>
                                    <h3 class="mb-3 text-lg font-bold text-white">Feature Ideas</h3>
                                    <p class="leading-relaxed text-slate-300">Share your ideas for new features</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Direct Contact Section -->
                <div class="relative text-center">
                    <div
                        class="relative inline-block rounded-2xl border border-slate-700/30 bg-gradient-to-br from-slate-800/30 to-slate-900/30 p-8 backdrop-blur-sm"
                    >
                        <p class="mb-6 text-lg text-slate-400">You can also reach us directly at</p>
                        <a
                            href="mailto:support@sharptabs.com"
                            class="group inline-flex items-center bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-xl font-semibold text-transparent transition-all duration-300 hover:from-blue-300 hover:to-cyan-300"
                        >
                            support@sharptabs.com
                        </a>
                    </div>
                </div>
            </div>
        </main>

        <div class="relative z-10">
            <Footer />
        </div>

        <style>
            @keyframes float {
                0%,
                100% {
                    transform: translateY(0px);
                }
                50% {
                    transform: translateY(-20px);
                }
            }

            .animate-float {
                animation: float 6s ease-in-out infinite;
            }

            /* Custom scrollbar */
            ::-webkit-scrollbar {
                width: 8px;
            }

            ::-webkit-scrollbar-track {
                background: #0f172a;
            }

            ::-webkit-scrollbar-thumb {
                background: linear-gradient(to bottom, #3b82f6, #06b6d4);
                border-radius: 4px;
            }

            ::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(to bottom, #2563eb, #0891b2);
            }
        </style>
    </body>
</html>
